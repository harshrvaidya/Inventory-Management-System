<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tcet.ivm2.controller.LoginController"
            prefHeight="407.0" prefWidth="633.0"
            style="-fx-background-color: linear-gradient(to right, #f5fafd 50%, #90EE90 50%);
                   -fx-background-radius: 1;
                   -fx-border-radius: 1;
                   -fx-border-width: 2;
                   -fx-border-style: solid;">

   <children>

      <!-- LOGIN LABEL -->
      <Label layoutX="117.0" layoutY="101.0" text="LOGIN">
         <font>
            <Font name="Berlin Sans FB" size="29.0" />
         </font>
      </Label>

      <!-- USERNAME FIELD -->
      <TextField fx:id="usernameField"
                 layoutX="94.0" layoutY="162.0"
                 promptText="Username"
                 style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>

      <!-- PASSWORD FIELD -->
      <PasswordField fx:id="passwordField"
                     layoutX="94.0" layoutY="213.0"
                     promptText="Password"
                     style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;" />

      <!-- LOGIN BUTTON -->
      <Button fx:id="loginBtn"
              layoutX="143.0" layoutY="309.0"
              mnemonicParsing="false"
              onAction="#handleLogin"
              style="-fx-background-radius: 15;
                     -fx-border-radius: 15;
                     -fx-background-color: linear-gradient(to right,#00bcd4,#90EE90);
                     -fx-font-family: 'Segoe UI';
                     -fx-effect: dropshadow(gaussian,#03a9f4,6,0.2,0,3);"
              text="Login"
              textFill="white" />

      <!-- FORGOT PASSWORD LINK -->
      <Hyperlink layoutX="123.0" layoutY="256.0" text="Forgot Password?">
         <font>
            <Font size="11.0" />
         </font>
      </Hyperlink>

      <!-- SIGNUP SECTION -->
      <Label layoutX="372.0" layoutY="98.0" text="Create Account !">
         <font>
            <Font name="Berlin Sans FB" size="33.0" />
         </font>
      </Label>

      <Label layoutX="363.0" layoutY="166.0"
             text="Sign up if you still don't have an account">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
      </Label>

      <Label layoutX="410.0" layoutY="249.0" text="It won't take much time">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
      </Label>

      <Button fx:id="signupLink"
              layoutX="449.0" layoutY="309.0"
              mnemonicParsing="false"
              onAction="#handleSignup"
              style="-fx-border-radius: 15;
                     -fx-background-radius: 15;
                     -fx-background-color: linear-gradient(to right,#00bcd4,#90EE90);
                     -fx-font-family: 'Segoe UI';
                     -fx-effect: dropshadow(gaussian,#03a9f4,6,0.2,0,3);"
              text="Sign Up"
              textFill="white" />

   </children>
</AnchorPane>
