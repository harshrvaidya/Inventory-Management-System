<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="407.0" prefWidth="634.0"
    style="-fx-background-color: linear-gradient(to right, #f5fafd 50%, #90EE90 50%);
           -fx-background-radius: 1;
           -fx-border-radius: 1;
           -fx-border-width: 2;
           -fx-border-style: solid;"
    xmlns="http://javafx.com/javafx/25"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.tcet.ivm2.controller.SignupController">

    <children>
        <!-- LEFT SIDE -->
        <AnchorPane layoutX="0.0" layoutY="0.0" prefHeight="407.0" prefWidth="317.0">
            <children>
                <Label layoutX="104.0" layoutY="14.0" text="SIGN UP" textFill="#90EE90">
                    <font>
                        <Font name="Berlin Sans FB" size="29.0" />
                    </font>
                </Label>
                <Label layoutX="53.0" layoutY="78.0" text="Username:">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="usernameField" layoutX="53.0" layoutY="96.0" prefWidth="160.0"
                           promptText="Enter Username"
                           style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;" />
                <Label layoutX="53.0" layoutY="144.0" text="Email:">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="emailField" layoutX="53.0" layoutY="162.0" prefHeight="25.0" prefWidth="160.0"
                           promptText="Enter Email-ID"
                           style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;" />
                <Label layoutX="55.0" layoutY="213.0" text="Password:">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" layoutX="53.0" layoutY="231.0" prefWidth="160.0"
                               promptText="Enter Password"
                               style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;" />
                <Button fx:id="signupBtn" layoutX="114.0" layoutY="307.0" mnemonicParsing="false" onAction="#handleSignup"
                        prefHeight="18.0" prefWidth="86.0"
                        style="-fx-background-color: linear-gradient(to right,#00bcd4,#90EE90);
                               -fx-text-fill: white;
                               -fx-background-radius: 15;
                               -fx-border-radius: 15;
                               -fx-font-size: 14;
                               -fx-font-family: 'Segoe UI';
                               -fx-effect: dropshadow(gaussian,#03a9f4,6,0.2,0,3);"
                        text="Sign Up" />
            </children>
        </AnchorPane>

        <!-- RIGHT SIDE -->
        <AnchorPane layoutX="317.0" layoutY="0.0" prefHeight="407.0" prefWidth="317.0">
            <children>
                <Label layoutX="30.0" layoutY="28.0" text="Create your account to get started">
                    <font>
                        <Font name="Times New Roman" size="16.0" />
                    </font>
                </Label>
                <Label layoutX="57.0" layoutY="107.0" text="• Fast and easy registration" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Label layoutX="57.0" layoutY="125.0" text="• Secure your data" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Label layoutX="57.0" layoutY="143.0" text="• Start managing inventory" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Label layoutX="55.0" layoutY="257.0" text="Already have an account?" wrapText="true">
                    <font>
                        <Font name="Times New Roman" size="15.0" />
                    </font>
                </Label>
                <Button fx:id="loginLink" layoutX="114.0" layoutY="309.0" mnemonicParsing="false" onAction="#handleLoginLink"
                        prefHeight="30.0" prefWidth="86.0"
                        style="-fx-background-color: linear-gradient(to right,#00bcd4,#90EE90);
                               -fx-text-fill: white;
                               -fx-background-radius: 15;
                               -fx-border-radius: 15;
                               -fx-font-size: 11;
                               -fx-font-family: 'Segoe UI';
                               -fx-effect: dropshadow(gaussian,#03a9f4,6,0.2,0,3);"
                        text="Back to Login" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
